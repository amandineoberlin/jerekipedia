{
  "manifest_version": 2,

  "name": "Jerekipedia",
  "description": "This extension load all visited wikipedia pages to system folder",
  "version": "1.0",
  "background": {
    "scripts":["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
     "js": ["popup.js"],
     "css": [ "popup.css" ],
     "matches": [ "<all_urls>" ]
    }
  ],
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "pageCapture",
    "downloads"
  ]
}
